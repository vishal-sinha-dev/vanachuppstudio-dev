{%- liquid
  assign cart_t = 'layout.header.cart' | t

  capture cart_icon
    if cart_icon == "bag"
      render 'icons', icon: 'bag'
    elsif cart_icon == "cart"
      render 'icons', icon: 'cart'
    elsif cart_icon == "text"
      echo 'cart.title' | t
    endif
  endcapture
-%}

<div class="cart--external--icon" data-item-count="{{ cart.item_count }}">
  <a
    class="header--cart-toggle"
    aria-label="{{ cart_t }}"
    {% if settings.cart--type == 'drawer' %}
      data-drawer-open="right"
      data-drawer-view="cart"
      aria-haspopup="menu"
      href="#"
    {% else %}
      href="{{ routes.cart_url }}"
    {% endif %}
  >
    {{ cart_icon }}
    <span class="cart--external--total-items">
      {%- if cart.item_count > 0 -%} {% comment %} {{ cart.item_count }}{% endcomment %} {%- render 'bold-options-hybrid-cart-item-count' with cart -%}{%- endif -%}
    </span>
  </a>

  <noscript>
    <a
      class="header--cart-toggle--noscript"
      aria-label="{{ cart_t }}"
      href="{{ routes.cart_url }}"
    >
      {{ cart_icon }}
      <span class="cart--external--total-items">
        {%- if cart.item_count > 0 -%}{% comment %} {{ cart.item_count }}{% endcomment %} {%- render 'bold-options-hybrid-cart-item-count' with cart -%}{%- endif -%}
      </span>
    </a>
  </noscript>

</div>