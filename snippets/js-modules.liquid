<script type="module">
  import "{{ 'theme.js' | asset_url }}";
  import "{{ 'a11y.js' | asset_url }}";
  import "{{ 'media-queries.js' | asset_url }}";
  import "{{ 'radios.js' | asset_url }}";
  import "{{ 'transition.js' | asset_url }}";
  import "{{ 'general.js' | asset_url }}";
  import "{{ 'tab-order.js' | asset_url }}";
  import "{{ 'collapsible-row.js' | asset_url }}";
  import "{{ 'disclosure.js' | asset_url }}";

  {%- unless request.page_type == 'password' -%}
    import "{{ 'y-menu.js' | asset_url }}";
    import "{{ 'drawer.js' | asset_url }}";
    import "{{ 'cart.js' | asset_url }}";

    {%- if settings.product--quick-add-enabled -%}
      import "{{ 'quick-add.js' | asset_url }}";
      import "{{ 'product-quantity.js' | asset_url }}";
      import "{{ 'product-buy-buttons.js' | asset_url }}";
    {%- endif -%}

    import "{{ 'x-menu.js' | asset_url }}";
  {%- endunless -%}

  {%- if settings.product--hover-image-enabled -%}
    import "{{ 'product-hover-image.js' | asset_url }}";
  {%- endif -%}

  {%- if request.design_mode -%}
    import "{{ 'editor-events.js' | asset_url }}";
  {%- endif -%}

  {%- if settings.product--quick-add-enabled -%}
    import "{{ 'product-media--variants.js' | asset_url }}";
    import "{{ 'product-price.js' | asset_url }}";
    import "{{ 'product-options.js' | asset_url }}";
  {%- endif -%}
</script>